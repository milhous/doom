{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["pages/api/*"],
      "@app/*": ["app/*"],
      "@libs/*": ["app/libs/*"],
      "@ui/*": ["app/ui/*"],
      "@widget/*": ["app/widget/*"],
      "@web3/*": ["app/web3/*"],
      "@game/*": ["app/game/*"],
      "@staking/*": ["app/staking/*"],
      "@promotions/*": ["app/promotions/*"],
      "@affiliate/*": ["app/affiliate/*"],
      "@referral/*": ["app/referral/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
