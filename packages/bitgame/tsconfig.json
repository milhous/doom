{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["pages/api/*"],
      "@app/*": ["app/*"],
      "@libs/*": ["app/libs/*"],
      "@ui/*": ["app/ui/*"],
      "@widget/*": ["app/widget/*"],
      "@web3/*": ["app/web3/*"],
      "@game/*": ["app/game/*"],
      "@staking/*": ["app/staking/*"],
      "@promotions/*": ["app/promotions/*"],
      "@affiliate/*": ["app/affiliate/*"],
      "@referral/*": ["app/referral/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ]
}
